[
    // toggle the bottom pannel with the terminal/code results
    {
        "key": "ctrl+down",
        "command": "workbench.action.togglePanel"
    },
    {
        "key": "ctrl+left",
        "command": "workbench.action.focusSideBar"
    },
    {
        "key": "ctrl+left",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "sideBarFocus"
    },
    {
        "key": "ctrl+right",
        "command": "workbench.action.focusAuxiliaryBar"
    },
    {
        "key": "ctrl+right",
        "command": "workbench.action.toggleAuxiliaryBar",
        "when": "auxiliaryBarFocus"
    },
    {
        "key": "ctrl+up",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    // toggle the terminal in the bottom pannel
    {
        "key": "ctrl+t",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    // toggle the Snowflake query results in the bottom pannel
    {
        "key": "ctrl+r",
        "command": "workbench.view.extension.snowflakeResultsContainer"
    },
    // split screen actions
    {
        "key": "ctrl+v",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusLeftGroup"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusRightGroup"
    },
    {
        "key": "ctrl+s",
        "command": "workbench.view.extension.snowflakeActivityBarContainer"
    },
    // file explorer
    {
        "key": "ctrl+f",
        "command": "workbench.files.action.focusFilesExplorer"
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "shift+d",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "y",
        "command": "filesExplorer.copy",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "m",
        "command": "filesExplorer.cut",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // code snippets
    {
        "key": "ctrl+p",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "Convert UTC to PT"
        }
    },
    {
        "key": "ctrl+F1",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "membershipfact Exploration"
        }
    },
    {
        "key": "ctrl+F2",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "Quick Look at tula_membership_subscription"
        }
    },
    {
        "key": "ctrl+F3",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "Quick look at subscription charges"
        }
    },
    {
        "key": "ctrl+w",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "where statement"
        }
    }, 
    {
        "key": "ctrl+d",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "convert date to month"
        }
    }, 
    {
        "key": "ctrl+b",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "limit 100"
        }
    }, 
    {
        "key": "ctrl+g",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "group by all"
        }
    }, 
    {
        "key": "ctrl+m",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "name": "count and mix"
        }
    },
    // selecting open files/tabs
    {
        "key": "ctrl+1",
        "command": "workbench.action.openEditorAtIndex1"
    },
    {
        "key": "ctrl+2",
        "command": "workbench.action.openEditorAtIndex2"
    },
    {
        "key": "ctrl+3",
        "command": "workbench.action.openEditorAtIndex3"
    },
    {
        "key": "ctrl+4",
        "command": "workbench.action.openEditorAtIndex4"
    },
    {
        "key": "ctrl+5",
        "command": "workbench.action.openEditorAtIndex5"
    },
    {
        "key": "ctrl+6",
        "command": "workbench.action.openEditorAtIndex6"
    },
    {
        "key": "ctrl+7",
        "command": "workbench.action.openEditorAtIndex7"
    },
    {
        "key": "ctrl+8",
        "command": "workbench.action.openEditorAtIndex8"
    },
    {
        "key": "ctrl+9",
        "command": "workbench.action.openEditorAtIndex9"
    },
    // vim shortcuts
    {
        "key": "ctrl+d",
        "command": "vim.remap",
        "args": {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"]
        },
        "when": "vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+u",
        "command": "vim.remap",
        "args": {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z", "z"]
        },
        "when": "vim.mode == 'Normal'"
    }
]


